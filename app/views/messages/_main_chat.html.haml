.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__current-group
        = @group.name
      %ul.chat-main__group-info__left-box__member-list
        Member:
        %li.chat-main__group-info__left-box__member-list-member
          - @group.users.each do |user|
            = user.name

    .chat-main__group-info__edit-btn
      = link_to edit_group_path(@group) do
        Edit

  .chat-main__message-list
    = render @messages
      
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :body, class: "input-box__text", placeholder: "type a message"
        = f.label :image, class: "input-box__image" do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: "input-box__image__hidden"
      = f.submit 'Send', class: "send-btn"

