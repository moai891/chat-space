  .chat-main__message-form
    .chat-main__message-form__form-box
      .chat-main__message-form__form-box__input-box
        %input.chat-main__message-form__form-box__input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}
        %label.chat-main__message-form__form-box__input-box__image{for: "message_image"}
          = icon('fas', 'image')
          %input.chat-main__message-form__form-box__input-box__image__file{type: "file", id: "message_image"}
      
      .chat-main__message-form__form-box__send-btn
        Send
